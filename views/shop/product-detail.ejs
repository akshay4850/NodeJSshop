<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>
    <main class="centered">
      <h1><%= product.title %></h1>
      <hr>
      <div><img src="<%= product.imageUrl %>" alt="<% product.title %>"></div>
      <h2><%= product.price %></h2>
      <p><%= product.description %></p>
      <form action="/cart" method="post">
        <!-- submit type needed, but that's default for modern browsers (not so in old versions of IE) See https://stackoverflow.com/questions/60629749/is-type-submit-the-default-for-a-button-in-a-form-in-ie8-through-11 -->
        <button class="btn">Add to Cart</button>
      </form>
    </main>
    <%- include('../includes/end.ejs') %>