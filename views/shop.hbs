<main>
  {{!-- if helper. Pound symbol added for block statements. Block statements don't just output text, but wrap content that should be output conditionally or in a loop --}}
  {{#if hasProducts}}
  <div class="grid">
    {{#each prods}}
    <article class="card product-item">
      <header class="card__header">
        {{!-- the this keyword is for the elment in the array in the current iteration --}}
        <h1 class="product__title">{{ this.title }}</h1>
      </header>
      <div class="card__image">
        <img src="https://www.pngkey.com/png/detail/123-1232231_clipart-book-vector-book-clipart-outline.png"
          alt="A Book">
      </div>
      <div class="card__content">
        <h2 class="product__price">$19.99</h2>
        <p class="product__description">A very interesting book about so many even more interesting things!</p>
      </div>
      <div class="card__actions">
        <button class="btn">Add to Cart</button>
      </div>
    </article>
    {{/each}}
  </div>
  {{else}}
  <h1>No products found</h1>
  {{/if}}
</main>